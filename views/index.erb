<%# if the user is not connected to instagram, show connect button. Otherwise show search form %>

<% if session[:access_token] && !@user.nil? %>
	
	<div id="user-search">
		 <h3 id="welcome-message" class="text-center">Hello <%= @user.full_name %>!</h3>

		 <%# search user %>
		 <form id="user-search-form" action="<%= url('/user/search') %>" method="POST" class="form-inline">
		 	<input name="q" class="form-control" placeholder="instagram username" required="required"/> 
		 	<input id="user-search-submit" type="button" class="btn btn-primary" value="search"/>
		 </form>

		 <div id="user-search-loader" class="loader center"></div>
		 <div id="user-search-result">
 			<%# content loaded via ajax on form submit %>
		 </div>

	 </div>

<% else %>
 	<div id="ig-connect">
		<h4>connect to your Instagram account and start downloading!</h4>
		<a id="btn-ig-connect" href="<%= url('/oauth/connect') %>" class="btn btn-lg btn-primary">Connect to instagram!</a>
	</div>
<% end %>

